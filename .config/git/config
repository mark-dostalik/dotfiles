[alias]
  br = branch
  co = commit
  ll = log --pretty=format:\"%C(yellow)%h%Creset %C(green)%ad%Creset %C(magenta bold)%an%Creset:%C(red bold)%d%Creset %s\" -C -M --date=short --graph --all
  pf = push --force-with-lease --force-if-includes
  ss = st --short
  st = status
  sw = checkout  # tab-completion for switch doesn't work very well
  fixup = commit --fixup
[core]
  editor = nvim
[diff]
  colormoved = "default"
  colormovedws = "allow-indentation-change"
[fetch]
  prune = true
[includeIf "gitdir:~/work/"]
  path = ~/work/.gitconfig
[init]
  defaultBranch = main
[pager]
  branch = false
[push]
  autoSetupRemote = true
[rebase]
  autosquash = true
